<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FC1D8EF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/algo_button"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="16dp"
        android:drawableTop="@drawable/ic_baseline_home_24"
        android:gravity="center"
        android:text="Share this Algorithm"
        app:layout_constraintEnd_toStartOf="@+id/course_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="83dp"
        android:drawableTop="@drawable/ic_baseline_directions_car_24"
        android:gravity="center"
        android:text="Share this Course"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/algo_button"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>